<%- include partials/header.ejs %>


<main class="container">
    <h1>Take a Survey</h1>
        <div class="list-group row">
            <% for (var i = 0; i < surveys.length; i++) { %>
            <div class="col-md-10 col-md-offset-1">
                <a href="/takeSurvey/<%= surveys[i]._id %>" title="Take Survey" class="list-group-item">
                    <h4 class="list-group-item-heading">
                        <div class="text-center">
                            <span><%= surveys[i].name %></span> <br />
                        </div>
                        <div class="col-md-6">
                            <h5>Category:<%=  surveys[i].category %></h5>
                        </div>
                        <div class="col-md-6">
                            <h5 class="pull-right"> Created By:<%=  surveys[i].username %></h5>
                        </div>                        
                    </h4>                    
                    <p class="list-group-item-text" style="padding-left: 15px"><%= surveys[i].description %></p>
                </a>
            </div>
            <% } %>
        </div>
</main>


<% include partials/boot.ejs %>
