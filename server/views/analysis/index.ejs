<% include ../partials/header.ejs %>

<main class="container outer-semitransparent">
    <h1>Analysis for Your Surveys</h1><br />
        <div class="list-group row">
            <% for (var i = 0; i < surveys.length; i++) { %>
            <div class="col-md-8 col-md-offset-2 hover-change">
                <a href="/analysis/<%= surveys[i]._id %>" title="See Analysis" class="list-group-item">
                    <h4 class="list-group-item-heading heading-change">
                        <div class="text-center">
                            <span><%= surveys[i].name %></span> <br />
                        </div>
                        <div class="col-md-6">
                            <h5 class="heading-change">Category:<%=  surveys[i].category %></h5>
                        </div>
                        <div class="col-md-6">
                            <h5 class="pull-right heading-change"> Created By:<%=  surveys[i].username %></h5>
                        </div>                        
                    </h4>                    
                    <p class="list-group-item-text content-change" style="padding-left: 15px"><%= surveys[i].description %></p>
                </a>
            </div>
            <% } %>
        </div>
</main>


